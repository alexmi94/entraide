{% extends 'base.html.twig' %}

{% block title %}Mon Compte{% endblock %}

{% block body %}
<div class="container">

<div class="row" style="margin-top:10px">
    <div class="col-md-12">
      <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
        <div class="col p-4 d-flex flex-column position-static">
          <strong class="d-inline-block mb-2 text-primary-emphasis">Mes comp√©tences </strong>
          <h3 class="mb-0"></h3>
          <div class="mb-1 text-body-secondary">HTML, PHP, JS, SQL</div>
          <p class="card-text mb-auto"></p>
        </div>
      </div>
    </div>
</div>
<div style="margin-top:30px;"></div>
<h1>Mes posts</h1>
{% for post in user.getPosts() %}

<div class="row">
    <div class="col-md-12">
      <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
        <div class="col p-4 d-flex flex-column position-static">
          <strong class="d-inline-block mb-2 text-primary-emphasis">Par {{post.user.username}}</strong>
          <h3 class="mb-0">{{post.titre}}</h3>
          <div class="mb-1 text-body-secondary">Le {{post.date|date('d-m-Y')}}</div>
          <p class="card-text mb-auto">{{post.description|u.truncate(30, '...')}}</p>
          <a href="{{ path('app_post', {'id': post.id}) }}" class="icon-link gap-1 icon-link-hover stretched-link">
            Continue reading
            <svg class="bi"><use xlink:href="#chevron-right"></use></svg>
          </a>
        </div>
        <div class="col-auto d-none d-lg-block">
          <svg class="bd-placeholder-img" width="200" height="250" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
        </div>
      </div>
    </div>
</div>

{% endfor %}






</div>
{% endblock %}
